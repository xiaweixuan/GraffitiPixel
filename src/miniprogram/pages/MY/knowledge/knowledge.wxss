#creation-close{
  margin-top: 60rpx;
  margin-left: 40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 50rpx;
  background-color: rgb(0, 0, 0);
  opacity: 0.4;
}
#creation-close-biao{
  color: aliceblue;
  z-index: 10;
  padding-top: 8rpx;
  padding-left: 7rpx;
}
.num{
  margin-top: 60rpx;
}
.num text{
  font-size:60rpx
}
.question{
  font-size:40rpx;
}
.choose view{
  float:left;
}
.pic{
  width: 250rpx;
  height: 250rpx;
  border-radius: 125rpx;
  background-color: #B3E4CE;
  margin:0 auto;
  margin-top: 30rpx;
}
